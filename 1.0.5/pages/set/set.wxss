.questlist {
    height: 40px;
    line-height: 40px;
    border-bottom: 1px solid #ddd;
    text-align: center;
    background-color: #fff;
}

.questlist:last-child {
    border-bottom: none;
}

.layer {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    left: 0;
    top: 0;
    bottom: 0;
    z-index: 2;
}

.layerSet {
    position: fixed;
    width: 100%;
    background: #fff;
    z-index: 3;
    left: 0;
    bottom: 0;
}

.setTitle {
    height: 50px;
    line-height: 50px;
    text-align: center;
    border-bottom: 1px solid #ddd;
    font-size: 16px;
    color: #666;
    margin-bottom: 10px;
}

.setupInp {
    padding: 0 10px;
    height: 40px;
    display: flex;
    align-items: center;
}

.setupInp text {
    display: inline-block;
    width: 100px;
}

.layerBottom {
    display: flex;
    text-align: center;
    height: 50px;
    line-height: 50px;
    border-top: 1px solid #ddd;
    margin-top: 10px;
}

.layerBottom view {
    width: 50%;
}

.layerClose {
    color: #999;
    border-right: 1px solid #eee;
}

.complete {
    color: #0c0;
}