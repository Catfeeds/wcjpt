.list {
    height: 120rpx;
    display: flex;
    align-items: center;
    background-color: #FFF;
    padding: 0 30rpx;
    border-bottom: 1px solid #f2f2f2;
}

.list:last-child {
    border-bottom: none;
}

.list image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    flex-shrink: 0;
    display: block;
    margin-right: 20rpx;
}

.list .next {
    width: 18rpx;
    height: 18rpx;
    border-top: 2px solid #cbcbcb;
    border-right: 2px solid #cbcbcb;
    transform: rotate(45deg);
    margin-left: auto;
    margin-right: 0;
}